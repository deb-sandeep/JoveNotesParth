subject "Hindi Grammar"
chapterNumber 5.0
chapterName "क्रिया"

@rtc{
	context "नीचे दिए गए वाक्यों में क्रिया पहचानो."
	
	@qa "वरुण बाज़ार जा रहा है."
	"जा रहा है"
	
	@qa "बच्चा सो गया."
	"सो गया"
	
	@qa "शमा ने काम कर लिया."
	"कर लिया"
	
	@qa "तोता हरी मिर्च खा रहा है."
	"खा रहा है"
	
	@qa "मीनू ने आइसक्रीम खाई."
	"खाई"
	
	@qa "मानस साइकल चलाता है."
	"चलाता है"
	
	@qa "रोहन का आज जन्मदिन है."
	"है"
	
	@qa "बर्फ़ पड़ रही है."
	"पड़ रही है"
	
}

@rtc{
